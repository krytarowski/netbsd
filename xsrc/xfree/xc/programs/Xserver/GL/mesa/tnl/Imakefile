                -I$(SERVERSRC)/GL/include -I$(SERVERSRC)/GL/glx \
                -I$(LIBSRC)/GL/include \
                -I$(XF86SRC) -I$(INCLUDESRC)

      DEFINES = $(GLX_DEFINES) /*-DUSE_X86_ASM*/ /*-DUSE_SPARC_ASM*/

